                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingTop="10dp"/>

                <ListView
                    android:id="@+id/text_view_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                </ListView>

            </LinearLayout>

